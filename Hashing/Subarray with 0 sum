class Solution{
    //Function to check whether there is a subarray present with 0-sum or not.
    static boolean findsum(int arr[],int n)
    {
        //Your code here
        HashSet<Integer> hset = new HashSet<Integer>();
        int sum = 0;
        for (int i = 0; i < n; i++)
        {
            sum += arr[i];
            if (sum == 0 || arr[i] == 0)
                return true;
            if (hset.contains(sum))
                return true;
            else
                hset.add(sum);
        }
        return false;
    }
}
